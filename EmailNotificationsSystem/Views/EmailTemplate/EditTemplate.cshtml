@model EmailTemplateModel

@{
    ViewData["Title"] = "Edit Email Template";
}

<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary mb-2">Back to Email Templates</a>
</div>

<h2 class="mb-2">Edit Email Template</h2>

<form asp-action="EditTemplate" method="post">
    <input type="hidden" asp-for="TemplateId" />
    <div class="form-group mb-1">
        <label asp-for="TemplateName"></label>
        <input asp-for="TemplateName" class="form-control" />
        <span asp-validation-for="TemplateName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TemplateContent"></label>
        <textarea asp-for="TemplateContent" class="form-control" rows="5"></textarea>
        <span asp-validation-for="TemplateContent" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" class="btn btn-primary mt-2" />
</form>
